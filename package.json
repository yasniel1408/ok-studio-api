{
  "name": "ok-studio-api",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "tsc": "tsc --build",
    "clean": "rm -rf build",
    "build": "prisma generate && npx prisma migrate dev && ts-node ./src/common/createDirectAdmin.ts --unhandled-rejections=strict",
    "postinstall": "tsc -p .",
    "watch-ts": "tsc -w",
    "prettier": "npx prettier . --write",
    "eslint": "npx eslint . --fix --cache",
    "dev": "cross-env NODE_ENV=development nodemon",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "test": "cross-env NODE_ENV=test jest src",
    "create-admin": "ts-node ./src/common/createDirectAdmin.ts --unhandled-rejections=strict",
    "prepare": "husky install",
    "prisma-dev": "npx prisma migrate dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasniel1408/ok-studio-api.git"
  },
  "author": "Yasniel Fajardo Egues",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yasniel1408/ok-studio-api/issues"
  },
  "homepage": "https://github.com/yasniel1408/ok-studio-api#readme",
  "dependencies": {
    "@prisma/client": "^3.8.1",
    "apollo-server": "^3.6.1",
    "apollo-server-core": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^11.0.0",
    "easygraphql-tester": "^6.0.1",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "graphql-config": "^4.1.0",
    "helmet": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "lowdb": "1.0.0",
    "nodemon": "^2.0.15",
    "prisma": "^3.9.1",
    "prompt": "^1.2.1",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.8.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lowdb": "^1.0.11",
    "@types/prompt": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint --cache --fix",
      "pretty-quick --staged",
      "git add"
    ]
  },
  "engines": {
    "node": "14.x"
  }
